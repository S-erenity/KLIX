class Achievements:
    def __init__(self):
        self.achieved = False
        self.achievement_time = 0  # Time when the achievement was unlocked

    def check_achievement(self, kliks):
        if kliks >= 200 and not self.achieved:
            self.achieved = True
            self.achievement_time = millis()  # Record the time of achievement
            return True
        return False

    def display_achievement(self):
        if self.achieved and millis() - self.achievement_time <= 5000:  # Display for 5 seconds
            # Soft blue for the rectangle
            fill(106, 164, 184)
            rectMode(CORNER)
            rect(10, 10, 300, 60, 7)  # Top left corner, rounded corners for a modern look
            
            # White for the text, ensuring good contrast and readability
            fill(255)
            textSize(16)  # Slightly larger text for better visibility
            textAlign(LEFT, CENTER)
            text("Getting better. Click the circle 200 times", 20, 40)
